#!/bin/sh
set -x

battery(){
  local percent=$(cat /sys/class/power_supply/BAT0/capacity)
  local status=$(cat /sys/class/power_supply/BAT0/uevent | grep -o -P "(?<=POWER_SUPPLY_STATUS=).*")
  if [[ ! "$percent" = 100 ]]; then
    if [[ "$status" = "Charging" ]]; then
      echo "[bat âš¡ $percent%]" 
    else
      if [[ $percent < 15 ]]; then
        echo "[bat $percent% LOW BATTERY !]" 
      else
        echo "[bat $percent%]" 
      fi
    fi
  fi
}

vpn(){
  local vpn=$(nmcli c show --active | grep -P ".*?(?=[ \t]vpn[ \t])" | awk -F '  ' '{print $1}')
  if [[ ! -z $vpn ]]; then
    echo "[vpn $vpn]"
  fi
}

wifi(){
  local wifi=$(nmcli c show --active | grep -P ".*?(?=[ \t]wifi.*wlp2s0)" | awk -F '  ' '{print $1}')
  if [[ ! -z $wifi ]]; then
    echo "[wifi $wifi]"
  fi
}

while true; do
  xsetroot -name "$(battery)$(wifi)$(vpn) $(date +"%m-%d %r")"
   sleep 5    # Update time every 5 seconds
done &

while true; do
    # Log stderror to a file 
    /usr/local/bin/dwm 2> ~/.dwm.log
    # No error logging
    # dwm >/dev/null 2>&1
done
